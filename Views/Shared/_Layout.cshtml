<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <!--[if lt IE 9]>
            <script type="text/javascript">
                require([
                    "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.min",
                    "@BundleTable.Bundles.ResolveBundleUrl("~/bundles/html5shiv")"
                ]);
            </script>
        <![endif]-->
        <script type="text/javascript">
            require.config({
                paths: {
                    "jquery": [
                        "//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min",
                        "@BundleTable.Bundles.ResolveBundleUrl("~/bundles/jquery")"
                    ]
                }
            });
        </script>
    </head>
    <body>
        <div id="container">
            <div id="body">
                @RenderBody()
            </div>
        </div>
        
        
        @RenderSection("scripts", required: false)
    </body>
</html>
